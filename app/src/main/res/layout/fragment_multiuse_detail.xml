<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:src="@drawable/img_multiuse_cup"
                android:scaleType="centerCrop" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/tv_multiuse_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="다회용기 이용 조회" />

                <LinearLayout
                    android:id="@+id/ll_multiuse_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_multiuse_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/shape_certified_completion_content_rect"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_multiuse_cup" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_multiuse_detail_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ll_multiuse_icon"
                    app:layout_constraintTop_toTopOf="@id/ll_multiuse_icon"
                    app:layout_constraintBottom_toTopOf="@id/tv_multiuse_detail_location_content"
                    android:layout_marginStart="16sp"
                    android:textStyle="bold"
                    android:text="대여장소" />

                <TextView
                    android:id="@+id/tv_multiuse_detail_location_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ll_multiuse_icon"
                    app:layout_constraintTop_toBottomOf="@id/tv_multiuse_detail_location_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_multiuse_detail_date_title"
                    android:layout_marginStart="16sp"
                    android:text="블루포트 인하대학교점" />

                <TextView
                    android:id="@+id/tv_multiuse_detail_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ll_multiuse_icon"
                    app:layout_constraintTop_toBottomOf="@id/tv_multiuse_detail_location_content"
                    app:layout_constraintBottom_toTopOf="@id/tv_multiuse_detail_date_content"
                    android:layout_marginStart="16sp"
                    android:textStyle="bold"
                    android:text="대여 일시" />

                <TextView
                    android:id="@+id/tv_multiuse_detail_date_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ll_multiuse_icon"
                    app:layout_constraintTop_toBottomOf="@id/tv_multiuse_detail_date_title"
                    app:layout_constraintBottom_toBottomOf="@id/ll_multiuse_icon"
                    android:layout_marginStart="16sp"
                    android:text="2024. 04. 27 12:00:00" />
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="158dp"
                    android:layout_height="156dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_multiuse_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="26dp"
                    android:paddingVertical="18dp"
                    android:background="@drawable/shape_certified_completion_content_rect">

                    <TextView
                        android:id="@+id/tv_multiuse_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="대여\n다회용기 종류" />
                    
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="52dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_multiuse_type_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_multiuse_type_cup" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="158dp"
                    android:layout_height="156dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_multiuse_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="26dp"
                    android:paddingVertical="18dp"
                    android:background="@drawable/shape_certified_completion_content_rect">

                    <TextView
                        android:id="@+id/tv_multiuse_point_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="반납시\n획득 포인트" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_multiuse_point_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="25dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="100P" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_multiuse_detail_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/tv_multiuse_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="반납 가능 장소" />
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="349dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_multiuse_location_title"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/img_multiuse_map" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_multiuse_return_btn"
                android:layout_width="match_parent"
                android:layout_height="61.74dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginVertical="34.68dp"
                android:background="@drawable/shape_multiuse_detail_btn_rect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다회용기 반납하기"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold"
                    android:textSize="20sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>